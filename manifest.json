{
  "short_name": "User Behavior",
  "name": "User Behavior",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "http://*/*", 
    "https://*/*"
  ],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["scripts/content.js"]
  }],
  "browser_action": {
    "default_popup": "extension/build/index.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png" 
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-A7F0Ao6Nfg/z55q91XBSpseezlB7iSC4Bj5iu2UMtR4='; object-src 'self';"
}
